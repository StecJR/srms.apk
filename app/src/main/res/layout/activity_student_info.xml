<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    tools:context=".activity.StudentInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:paddingVertical="30dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/studentInfoResultButton"
                style="@style/CustomStyle.Button.Blue"
                android:text="@string/result"
                android:textAllCaps="false" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/guardianInfoLogoutButton"
                style="@style/CustomStyle.Button.Blue"
                android:text="@string/logout"
                android:textAllCaps="false" />
        </LinearLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/studentInfoProfileImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/CircleImageShape" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/student_info"
            android:textSize="@dimen/text_28" />

        <TableLayout
            style="@style/CustomStyle.Table.Simple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/rounded_shape_30"
            android:padding="10dp">

            <TableRow
                style="@style/CustomStyle.Table.Simple.SimpleRow"
                android:paddingVertical="3dp">

                <TextView
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:text="@string/student_id" />

                <TextView
                    android:id="@+id/studentInfoStudentId"
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                style="@style/CustomStyle.Table.Simple.SimpleRow"
                android:paddingVertical="3dp">

                <TextView
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:text="@string/name" />

                <TextView
                    android:id="@+id/studentInfoName"
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                style="@style/CustomStyle.Table.Simple.SimpleRow"
                android:paddingVertical="3dp">

                <TextView
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:text="@string/date_of_birth" />

                <TextView
                    android:id="@+id/studentInfoBirthDate"
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                style="@style/CustomStyle.Table.Simple.SimpleRow"
                android:paddingVertical="3dp">

                <TextView
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:text="@string/gender" />

                <TextView
                    android:id="@+id/studentInfoGender"
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                style="@style/CustomStyle.Table.Simple.SimpleRow"
                android:paddingVertical="3dp">

                <TextView
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:text="@string/program" />

                <TextView
                    android:id="@+id/studentInfoDept"
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                style="@style/CustomStyle.Table.Simple.SimpleRow"
                android:paddingVertical="3dp">

                <TextView
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:text="@string/session" />

                <TextView
                    android:id="@+id/studentInfoSession"
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                style="@style/CustomStyle.Table.Simple.SimpleRow"
                android:paddingVertical="3dp">

                <TextView
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:text="@string/contact" />

                <TextView
                    android:id="@+id/studentInfoContact"
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                style="@style/CustomStyle.Table.Simple.SimpleRow"
                android:paddingVertical="3dp">

                <TextView
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:text="@string/email" />

                <TextView
                    android:id="@+id/studentInfoEmail"
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                style="@style/CustomStyle.Table.Simple.SimpleRow"
                android:paddingVertical="3dp">

                <TextView
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:text="@string/address" />

                <TextView
                    android:id="@+id/studentInfoAddress"
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1" />
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/studentInfoGuardianInfoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/guardian_info"
            android:textSize="@dimen/text_28" />

        <TableLayout
            android:id="@+id/studentInfoGuardianInfoTable"
            style="@style/CustomStyle.Table.Simple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/rounded_shape_30"
            android:padding="10dp">

            <TableRow
                style="@style/CustomStyle.Table.Simple.SimpleRow"
                android:paddingVertical="3dp">

                <TextView
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:text="@string/name" />

                <TextView
                    android:id="@+id/studentInfoGuardianName"
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:layout_marginStart="50dp"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                style="@style/CustomStyle.Table.Simple.SimpleRow"
                android:paddingVertical="3dp">

                <TextView
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:text="@string/relation" />

                <TextView
                    android:id="@+id/studentInfoGuardianRelation"
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:layout_marginStart="50dp"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                style="@style/CustomStyle.Table.Simple.SimpleRow"
                android:paddingVertical="3dp">

                <TextView
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:text="@string/contact" />

                <TextView
                    android:id="@+id/studentInfoGuardianContact"
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:layout_marginStart="50dp"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                style="@style/CustomStyle.Table.Simple.SimpleRow"
                android:paddingVertical="3dp">

                <TextView
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:text="@string/email" />

                <TextView
                    android:id="@+id/studentInfoGuardianEmail"
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:layout_marginStart="50dp"
                    android:layout_weight="1" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</ScrollView>