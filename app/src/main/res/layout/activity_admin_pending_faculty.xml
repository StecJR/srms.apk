<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".activity.AdminPendingFacultyActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="30dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/pending_faculties"
        android:textSize="@dimen/text_24"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@drawable/rounded_30"
        android:backgroundTint="@color/surfaceContainer"
        android:paddingVertical="10dp"
        android:scrollbars="none">

        <TableLayout
            android:id="@+id/adminPendingFacultyTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp">

            <TableRow style="@style/CustomStyle.Table.SimpleRow">

                <TextView
                    style="@style/CustomStyle.Table.SimpleRowText"
                    android:layout_width="80dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="@string/dept"
                    android:textSize="@dimen/text_18" />

                <TextView
                    style="@style/CustomStyle.Table.SimpleRowText"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="@string/email"
                    android:textSize="@dimen/text_18" />
            </TableRow>
        </TableLayout>
    </ScrollView>
</LinearLayout>