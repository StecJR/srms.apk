<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@drawable/top_rounded_shape"
    android:backgroundTint="@color/yellow_dark"
    android:orientation="vertical"
    android:paddingBottom="30dp">

    <EditText
        android:id="@+id/otpVerificationInput"
        style="@style/CustomStyle.Input.Text"
        android:layout_marginTop="30dp"
        android:hint="@string/enter_otp"
        android:inputType="number" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/otpVerificationVerifyButton"
        style="@style/CustomStyle.Button.Blue"
        android:layout_gravity="center"
        android:layout_marginVertical="30dp"
        android:background="@drawable/button"
        android:text="@string/verify"
        android:textAllCaps="false" />
</LinearLayout>
