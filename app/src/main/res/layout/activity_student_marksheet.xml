            </TableRow>

            <TableRow
                style="@style/CustomStyle.Table.Simple.SimpleRow"
                android:paddingTop="10dp">

                <TextView
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:text="1113"
                    android:textAlignment="center" />

                <TextView
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:layout_weight="1"
