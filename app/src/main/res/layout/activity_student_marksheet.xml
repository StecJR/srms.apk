                    android:text="3.50"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <TextView
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:layout_width="60dp"
                    android:text="A-"
                    android:textAlignment="center" />
            </TableRow>

            <TableRow
                style="@style/CustomStyle.Table.Simple.SimpleRow"
