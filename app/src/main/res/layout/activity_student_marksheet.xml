                <TextView
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:text="1105"
                    android:textAlignment="center" />

                <TextView
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:layout_weight="1"
