<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context=".activity.StudentMarksheetActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/studentMarksheetTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="30dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="1st Year 1st Semester"
            android:textAlignment="center"
            android:textSize="@dimen/text_28" />

        <TableLayout
            android:id="@+id/studentMarksheetTable"
            style="@style/CustomStyle.Table.Simple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/rounded_shape"
            android:padding="10dp">

            <TableRow style="@style/CustomStyle.Table.Simple.SimpleRow">

                <TextView
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Code"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_18" />

                <TextView
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Course"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_18" />

                <TextView
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:layout_width="60dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="GPA"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_18" />

                <TextView
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:layout_width="60dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Grade"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_18" />
            </TableRow>

            <TableRow
                style="@style/CustomStyle.Table.Simple.SimpleRow"
                android:paddingVertical="10dp">

                <TextView
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:text="1101"
                    android:textAlignment="center" />

                <TextView
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:layout_weight="1"
                    android:text="Fundamentals of computer And Computing"
                    android:textAlignment="center" />

                <TextView
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:layout_width="60dp"
                    android:text="3.50"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <TextView
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:layout_width="60dp"
                    android:text="A-"
                    android:textAlignment="center" />
            </TableRow>

            <TableRow
                style="@style/CustomStyle.Table.Simple.SimpleRow"
                android:paddingVertical="10dp">

                <TextView
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:text="1102"
                    android:textAlignment="center" />

                <TextView
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:layout_weight="1"
                    android:text="Data Structure And Algorithm"
                    android:textAlignment="center" />

                <TextView
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:layout_width="60dp"
                    android:text="3.75"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <TextView
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:layout_width="60dp"
                    android:text="A"
