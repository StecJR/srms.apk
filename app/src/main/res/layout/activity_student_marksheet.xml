                <TextView
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:layout_width="60dp"
                    android:text="3.25"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <TextView
                    style="@style/CustomStyle.Table.Simple.SimpleRowText"
                    android:layout_width="60dp"
                    android:text="B+"
                    android:textAlignment="center" />
            </TableRow>

            <TableRow
                style="@style/CustomStyle.Table.Simple.SimpleRow"
