<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/top_rounded_40"
        android:backgroundTint="@color/surfaceContainerHighest"
        android:orientation="vertical"
        android:paddingHorizontal="30dp"
        android:paddingVertical="50dp">

        <EditText
            android:id="@+id/bottomSheetEditMarkInput"
            style="@style/CustomStyle.Input.Text"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="30dp"
            android:hint="@string/mark"
            android:importantForAutofill="no"
            android:inputType="number" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bottomSheetEditMarkCancelButton"
                style="@style/CustomStyle.Button.Secondary"
                android:layout_gravity="center"
                android:text="@string/cancel"
                android:textAllCaps="false" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bottomSheetEditMarkSaveButton"
                style="@style/CustomStyle.Button.Primary"
                android:layout_gravity="center"
                android:text="@string/save"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>