<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".activity.FacultyResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/departmentSpinner"
            style="@style/CustomStyle.Input.Spinner"
            android:paddingHorizontal="5dp"
            tools:ignore="TouchTargetSizeCheck" />

        <View
            android:layout_width="20dp"
            android:layout_height="0dp" />

        <Spinner
            android:id="@+id/sessionSpinner"
            style="@style/CustomStyle.Input.Spinner"
            android:paddingHorizontal="5dp"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/semesterSpinner"
            style="@style/CustomStyle.Input.Spinner"
            android:paddingHorizontal="5dp"
            tools:ignore="TouchTargetSizeCheck" />

        <View
            android:layout_width="20dp"
            android:layout_height="0dp" />

        <Spinner
            android:id="@+id/courseSpinner"
            style="@style/CustomStyle.Input.Spinner"
            android:paddingHorizontal="5dp"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/facultyResultSearchButton"
        style="@style/CustomStyle.Button.Primary"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:text="@string/search"
        android:textAllCaps="false" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@drawable/rounded_30"
        android:backgroundTint="@color/surfaceContainer"
        android:paddingVertical="10dp"
        android:scrollbars="none">

        <TableLayout
            android:id="@+id/facultyResultResultTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp">

            <TableRow style="@style/CustomStyle.Table.SimpleRow">

                <TextView
                    style="@style/CustomStyle.Table.SimpleRowText"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="@string/student_id"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/text_18" />

                <TextView
                    style="@style/CustomStyle.Table.SimpleRowText"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="@string/mark"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_18" />

                <TextView
                    style="@style/CustomStyle.Table.SimpleRowText"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="@string/grade"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_18" />
            </TableRow>
        </TableLayout>
    </ScrollView>
</LinearLayout>