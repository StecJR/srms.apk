<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/top_rounded_40"
        android:backgroundTint="@color/surfaceContainerHighest"
        android:orientation="vertical"
        android:paddingHorizontal="30dp"
        android:paddingVertical="50dp">

        <Spinner
            android:id="@+id/optionSpinner"
            style="@style/CustomStyle.Input.Spinner"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="30dp"
            android:padding="5dp"
            tools:ignore="TouchTargetSizeCheck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cancelButton"
                style="@style/CustomStyle.Button.Secondary"
                android:layout_gravity="center"
                android:text="@string/cancel"
                android:textAllCaps="false" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/deleteButton"
                style="@style/CustomStyle.Button.Primary"
                android:layout_gravity="center"
                android:text="@string/delete"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>