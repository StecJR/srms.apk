<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context=".fragment.LoginStudentFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:contentDescription="@string/app_logo"
            android:src="@drawable/srms_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="60dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/student_login"
            android:textSize="@dimen/text_28" />

        <Spinner
            android:id="@+id/departmentSpinner"
            style="@style/CustomStyle.Input.Spinner"
            android:layout_width="280dp"
            android:layout_gravity="center_horizontal"
            android:padding="5dp" />

        <EditText
            android:id="@+id/loginStudentIdInput"
            style="@style/CustomStyle.Input.Text"
            android:layout_marginTop="30dp"
            android:autofillHints="name"
            android:hint="@string/student_id"
            android:maxLength="8" />

        <EditText
            android:id="@+id/loginStudentPwInput"
            style="@style/CustomStyle.Input.Password"
            android:layout_marginTop="30dp"
            android:autofillHints="password"
            android:hint="@string/password" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/loginStudentLoginButton"
            style="@style/CustomStyle.Button.Blue"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="@string/login"
            android:textAllCaps="false" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/loginStudentCreateAccountButton"
            style="@style/CustomStyle.Button.TextOnly"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="30dp"
            android:text="@string/create_new_account"
            android:textSize="@dimen/text_16" />
    </LinearLayout>
</ScrollView>
