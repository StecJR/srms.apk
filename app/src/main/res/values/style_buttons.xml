<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomStyle.Button.Base" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomStyle.Button.Primary" parent="CustomStyle.Button.Base">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">7dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:textColor">@color/onPrimary</item>
    </style>

    <style name="CustomStyle.Button.Secondary" parent="CustomStyle.Button.Primary">
        <item name="android:background">@drawable/button_secondary</item>
        <item name="android:textColor">@color/onSecondary</item>
    </style>

    <style name="CustomStyle.Button.Error" parent="CustomStyle.Button.Primary">
        <item name="android:background">@drawable/button_error</item>
        <item name="android:textColor">@color/onError</item>
    </style>

    <style name="CustomStyle.Button.TextOnly" parent="CustomStyle.Button.Base">
        <item name="android:background">@null</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:textColor">@color/onSecondaryVariant</item>
        <item name="android:textSize">@dimen/text_18</item>

    </style>

    <style name="CustomStyle.Button.LongWidth" parent="CustomStyle.Button.Base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingHorizontal">15dp</item>
        <item name="android:paddingVertical">20dp</item>
        <item name="android:background">@drawable/rounded_30</item>">
        <item name="android:backgroundTint">@color/tertiary</item>
        <item name="android:textSize">@dimen/text_18</item>
    </style>

    <style name="CustomStyle.Button.Square" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:background">@drawable/rounded_30</item>
        <item name="android:backgroundTint">@color/tertiaryContainer</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>