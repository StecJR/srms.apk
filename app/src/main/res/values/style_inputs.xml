<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomStyle.Input.Base" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingHorizontal">15dp</item>
        <item name="android:paddingVertical">18dp</item>
    </style>
    <style name="CustomStyle.Input.Text.Base" parent="CustomStyle.Input.Base">
        <item name="android:inputType">text</item>
    </style>
    <style name="CustomStyle.Input.Password.Base" parent="CustomStyle.Input.Base">
        <item name="android:inputType">textPassword</item>
        <item name="android:drawableEnd">@drawable/eye_password_hide</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="CustomStyle.Input.Spinner.Base" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingHorizontal">15dp</item>
        <item name="android:paddingVertical">18dp</item>
    </style>
</resources>