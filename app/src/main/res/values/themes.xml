<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SRMS" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="fontFamily">@font/nunito</item>
    </style>

    <style name="Theme.SRMS" parent="Base.Theme.SRMS" />

    <style name="Theme.NoSplash" parent="Base.Theme.SRMS">
        <item name="android:windowBackground">@color/wheat</item>

        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/wheat</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/srms_logo</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">2500</item>
    </style>

    <style name="CustomStyle.Button" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:paddingLeft">15sp</item>
        <item name="android:paddingRight">15sp</item>
        <item name="android:paddingTop">2sp</item>
        <item name="android:paddingBottom">5sp</item>
    </style>

    <style name="CustomStyle.Input" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/input_field</item>
        <item name="android:backgroundTint">@color/yellow_dark</item>
        <item name="android:paddingHorizontal">15dp</item>
        <item name="android:paddingVertical">18dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/blue_lite</item>
    </style>
    <style name="CustomStyle.Input.Text" parent="CustomStyle.Input">
        <item name="android:inputType">text</item>
    </style>
    <style name="CustomStyle.Input.Password" parent="CustomStyle.Input">
        <item name="android:inputType">textPassword</item>
        <item name="android:drawableEnd">@drawable/eye_password_hide</item>
        <item name="android:drawableTint">@color/yellow_lite</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="CircleImageShape" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

</resources>